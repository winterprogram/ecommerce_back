{
  "id": "/signup",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "merchant on signup",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "mobile_number", "dob", "email_id", "password"],
  "properties": {
    "name": {
      "type": "string"
    },
    "mobile_number": {
      "type": "string",
      "maxLength": 10,
      "minLength": 10
    },
    "dob": {
      "type": "string"
    },
    "email_id": {
      "type": "string"
    },
    "password": {
      "type": "string",
      "minLength": 6
    },
    "addresses": {
      "type": "object",
      "properties": {
        "home": {
          "type": "array",
          "items": {
            "$ref": "/address#properties"
          }
        },
        "office": {
          "type": "array",
          "items": {
            "$ref": "/address#properties"
          }
        }
      }
    },
    "is_active": {
      "type": "boolean"
    },
    "created_at": {
      "type": "string"
    },
    "updated_at": {
      "type": "string"
    }
  }
}
